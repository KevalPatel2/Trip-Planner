<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header Background -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/my_primary"/>

    <!-- Text on top of Header Background -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-50dp"
        android:text="TRIP PLANNER"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/montserratmedium" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/logo"
        android:layout_marginTop="-55dp"/>

    <!-- Text on top of Header Background -->

    <!-- Summary Information -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Trip Summary:"
            android:textColor="@color/my_primary"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
    </FrameLayout>

    <!-- Display a simple summary of the trip details -->
    <TextView
        android:id="@+id/textViewTripDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginBottom="16dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <!-- Progress Bar to display the countdown timer -->
    <ProgressBar
        android:id="@+id/progressBarCountdown"
        android:layout_width="395dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0"/>

    <!-- Countdown Text -->
    <TextView
        android:id="@+id/textViewCountdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@id/progressBarCountdown"/>

    <!-- Button to Edit Choices -->
    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Edit Choices"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/my_primary"
        android:background="@drawable/custom_edittext"
        android:textColor="@color/white"/>

    <!-- Button to Finish Planning -->
    <Button
        android:id="@+id/buttonFinish"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Go to Checkout"
        android:layout_gravity="center"
        android:backgroundTint="@color/my_primary"
        android:background="@drawable/custom_edittext"
        android:textColor="@color/white"/>


</LinearLayout>
